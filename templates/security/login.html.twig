{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}
{% block description %}Cette page permet de se connecter{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        list-style-type: none;
        text-decoration: none;
    }

    body {
        background: -webkit-linear-gradient(left, #076827, #b7ddc3);
    }

    .emp-about {
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
    }

    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .title-header h2 {
        background: #fff;
        color: #363636;
        display: inline-block;
        font-weight: 600;
        line-height: 40px;
        margin: 0;
        padding: 0 30px;
        position: relative;
        text-transform: uppercase;
        border: 2px solid #198754;
    }
</style>
<div class="example-wrapper emp-about">


    <div class="title-header text-center">
        <section class="container my-3">
            <div class="row">
                <div class="col">

                    <form method="post">
                        {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security')
                            }}</div>
                        {% endif %}

                        {% if app.user %}
                        <div class="mb-3">
                            vous etes conecté(e) comme {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}"> Me deconecter</a>
                        </div>
                        {% endif %}

                        <h1 class=" mb-3 font-weight-normal">Me conecter </h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                            class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                            autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-lg btn-outline-success mt-3" type="submit">
                            Me connecter
                        </button>
                        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-lg btn-outline-success mt-3"
                            type="submit">
                            mot de passe oublié
                        </a>
                    </form>

                </div>
            </div>
        </section>

    </div>

</div>


{% endblock %}