{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}

    <h1>Menu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Menu_name</th>
                <th>Price_menu</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
     
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.menuName }}</td>
                <td>{{ menu.priceMenu }}</td>
                <td>{{ menu.description }}</td>
                <td>
            
                    <a href="{{ path('app_menu_show', {'id': menu.id}) }}">show</a>
                    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_menu_new') }}">Create new</a>
{% endblock %}
